<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    <style name="main_tab_bottom">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:textColor">@drawable/bar_text_color</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <declare-styleable name="WritingBoardView">
        <attr name="boardBackground" format="color"></attr> <!--画板颜色-->
        <attr name="paintColor" format="color"></attr> <!--画笔颜色-->
        <attr name="paintWidth" format="dimension"></attr> <!--画笔宽度-->
    </declare-styleable>
    <style name="OverFlowMenuTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="overlapAnchor">false</item>
    </style>
    <style name="Button" parent="Theme.AppCompat">
        <item name="colorControlHighlight">@color/indigo_500</item>
        <item name="colorButtonNormal">@color/pink_200</item>
    </style>
    <style name="AppThemeBlue" parent="AppTheme">
        <item name="colorPrimary">@color/color_primary_blue</item>
        <item name="colorPrimaryDark">@color/color_primary_blue_dark</item>
        <item name="colorAccent">@color/color_accent_pink</item>
    </style>
    <style name="theme.customer_progress_dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:alertDialogStyle">@style/customer_progress_dialog</item>
        <item name="android:progressBarStyleSmall">@style/customer_progress_dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/custom_dialog_view</item>
        <item name="android:height">30dp</item>
    </style>

    <style name="customer_progress_dialog" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:fullDark">@android:color/transparent</item>
    </style>
    <style name="custom_dialog" parent="@android:style/Theme">
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@drawable/custom_dialog_view</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
